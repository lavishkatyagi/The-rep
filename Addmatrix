#include<stdio.h>
 int main ()
{
int a[2][2];
int b[2][2];
int c[2][2];
int i,j;
int k,m;

printf("enter 4 elements of 1st matrix\n");
for(i=0;i<2;i++)
{
  for( j=0;j<2;j++)

scanf("%d",&a[i][j]);
  }

printf("enter 4 elements of 2nd matrix\n");
for(i=0;i<2;i++)
{
  for( j=0;j<2;j++)
scanf("%d",&b[i][j]);
}
 for(i=0;i<2;i++)
{
for(j=0;j<3;j++)
c[i][j]=a[i][j]+b[i][j];

}
for (i=0;i<2;i++)
{
  for( j=0;j<2;j++)
{printf("%d ",c[i][j]);
  }
printf("\n");}


 return 0;
}
    
